{
  "manifest_version": 2,

  "name": "Kappa Everywhere - Global Twitch Emotes",
  "short_name": "Kappa Everywhere",
  "description": "Replaces Twitch emote text with the actual emotes on all websites",
  "version": "1.2.12",

  "content_scripts": [{
      "js": ["contentscript.js", "intenta.js"],
      "run_at": "document_end",
      "matches": ["*://*/*"]
  }],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage", "tabs", "cookies", "http://*/", "https://*/", "webRequest", "webRequestBlocking"
  ],

  "icons": { 
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png" 
  },

  "options_page": "options.html"
}
